@{
  Layout = "_Layout";
}

<h1>Categories</h1>
@if (@Model.Count == 0)
{
<h4>No categories have been made</h4>
}

@foreach (var category in Model)
{
<h4><a href='/categories/@category.GetId()'>@category.GetName()</a> | <a href = "/categories/@category.GetId()/update">Edit</a></h4>
}

<p><a href='/categories/new'>Add new Category</a></p>
<p><a href='/'>back Home</a></p>
